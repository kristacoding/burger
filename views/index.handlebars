<header>
  <div class="jumbotron">
    <div class="container">
      <center>
        <h1 class="display-4">Eat-Da-Burger!</h1>
      </center>
    </div>
  </div>
</header>


<div class="row">
  <div class="col-md-6">
    <h2> Burgers to Eat </h2>
    <ul>
      {{#each burgers}}

      {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <button type="submit button" class="btn btn-danger change-devour" id={{this.id}}>DEVOUR IT</button>
      </li>
      {{/unless}}

      {{/each}}
    </ul>
  </div> 
  <div class="col-md-6">
    <h2>Burgers Devoured</h2>
    <ul>
      {{#each burgers}}
      {{#if this.devoured}}
      <li>
        {{this.burger_name}} DEVOURED
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2>Devour Another Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Enter Burger Name</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit" class="btn btn-danger">Submit</button>
</form>

<p>Enter a burger you want to eat and click the 'submit' button</p>
